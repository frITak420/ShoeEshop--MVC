@model Web.Models.Product

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<style>
    body {
        margin-left: 10px;
    }

    a {
        text-decoration: none
    }
</style>


<h1>Smazat produkt</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Název produktu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            Detailní název produktu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductDetailName)
        </dd>
        <dt class = "col-sm-2">
            Cena
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Cena před slevou
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OldPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InfoText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InfoText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InfoText2)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InfoText2)
        </dd>
        <dt class = "col-sm-2">
            Skladem?
        </dt>
        <dt class = "col-sm-2">
           Typ / Kategorie
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            Materiál
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Material)
        </dd>
        <dt class = "col-sm-2">
            Pohlaví
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sex)
        </dd>
        <dt class = "col-sm-2">
            Výrobní číslo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductCode)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><img src="https://cdn-icons-png.flaticon.com/512/1214/1214428.png" height="15" width="15">&nbsp; Smazat</button>
        <a asp-action="Index" class="btn btn-secondary"><img src="https://cdn-icons-png.flaticon.com/512/2099/2099238.png" height="18" width="15">&nbsp; Jít zpět</a>
    </form>
</div>
