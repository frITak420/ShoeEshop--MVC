@model Web.Models.Product


<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<style>
    body {
        margin-left: 10px;
        
    }
    a{text-decoration:none}
</style>
<body>
<h1>Přidat produkt</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Název produktu</label>
                <input asp-for="ProductName" class="form-control" required/>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDetailName" class="control-label">Detailní název produktu</label>
                    <input asp-for="ProductDetailName" class="form-control" required />
                <span asp-validation-for="ProductDetailName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Cena</label>
                    <input asp-for="Price" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OldPrice" class="control-label">Cena před slevou</label>
                <input asp-for="OldPrice" class="form-control" />
                <span asp-validation-for="OldPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InfoText" class="control-label"></label>
                    <input asp-for="InfoText" class="form-control" />
                <span asp-validation-for="InfoText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InfoText2" class="control-label"></label>
                <input asp-for="InfoText2" class="form-control" />
                <span asp-validation-for="InfoText2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Kategorie / Typ</label>
                    <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material" class="control-label">Materiál</label>
                    <input asp-for="Material" class="form-control" />
                <span asp-validation-for="Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sex" class="control-label">Pohlaví(1=muž;2=žena;3=unisex)</label>
                <input asp-for="Sex" class="form-control" />
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCode" class="control-label">Výrobní číslo</label>
                    <input asp-for="ProductCode" class="form-control" required />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
                <div class="mb-3">
                    <label class="form-label">
                        Sem vložte hlavní fotku produktu
                        <input type="file" name="photoMain" class="form-control"/>
                    </label>
                </div>
                <div class="mb-3">
                    <label class="form-label">
                        Zde vložte 1 či více fotek pro detail produktu
                        <input type="file" name="photosDetail" class="form-control" multiple/>
                    </label>
                </div>

            <br>
            <div class="form-group">
                    <button type="submit" class="btn btn-success"><img src="https://cdn-icons-png.flaticon.com/512/992/992651.png" height="15" width="15" />&nbsp; Přidat</button> 
                    <a asp-action="Index" class="btn btn-secondary"><img src="https://cdn-icons-png.flaticon.com/512/2099/2099238.png" height="15" width="15">&nbsp; Jít zpět</a>
            </div>
        </form>
    </div>
</div>

</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
