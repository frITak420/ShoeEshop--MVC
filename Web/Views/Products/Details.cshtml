@model Web.Models.Product


<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<style>
    body {
        margin-left: 10px;
    }

    a {
        text-decoration: none
    }
</style>
<h1>Detaily</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Název produktu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            Detailní název produktu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductDetailName)
        </dd>
        <dt class = "col-sm-2">
            Cena
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Cena před slevou
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OldPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InfoText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InfoText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InfoText2)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InfoText2)
        </dd>
        <dt class = "col-sm-2">
            Skladem?
        </dt>
        <dt class = "col-sm-2">
            Kategorie / Typ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
           Materiál
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Material)
        </dd>
        <dt class = "col-sm-2">
            Pohlaví
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sex)
        </dd>
        <dt class = "col-sm-2">
            Výrobní číslo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductCode)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success"><img src="https://cdn-icons-png.flaticon.com/512/1828/1828911.png" height="15" width="15">&nbsp; Upravit</a> |
    <a asp-action="Index" class="btn btn-secondary"><img src="https://cdn-icons-png.flaticon.com/512/2099/2099238.png" height="15" width="15">&nbsp; Jít zpět</a>
</div>
